<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ASP.NET Uygulamam</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Uygulama adı", "Liste", "Yonetim", new { area = "" }, new { @class = "navbar-brand" })
            <link href="@Url.Content("~/Content/Guncelle.css")" rel="stylesheet" />
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Urun Listesi", "Liste", "Yonetim")</li>
                    <li>@Html.ActionLink("Urun Ekle", "Ekle", "Yonetim")</li>
                    <li>@Html.ActionLink("Urun Guncelle", "Guncelle", "Yonetim")</li>
                    <li>@Html.ActionLink("Urun Sil", "Sil", "Yonetim")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        

        <div class="denge">
            <div class="sutun" >
                <div class="satir" style="background-color:yellow;">I</div>
            </div>
            <div class="sutun">
                <div class="satir" style="background-color:yellow;">R</div>
                <div class="satir">R</div>
                <div class="satir">+</div>
            </div>
            <div class="sutun">
                <div class="satir">B</div>
                <div class="satir">B</div>
                <div class="satir" style="background-color:yellow;">B</div>
                <div class="satir">B</div>
                <div class="satir">B</div>
                <div class="satir">+</div>
            </div>
        </div>

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ASP.NET Uygulamam</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
