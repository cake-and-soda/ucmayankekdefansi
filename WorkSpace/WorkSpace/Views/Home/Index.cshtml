@{
    ViewBag.Title = "Home Page";
}
<head>
    <link href="~/Content/mainpage.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/Content/ajax.min.css">
    <link rel="stylesheet prefetch" href="~/Content/ajax.slick.min.css">
    <link rel="stylesheet prefetch" href="~/Content/ajax.slick-theme.min.css" /> 
    <link rel="stylesheet prefetch" href="~/Content/google.roboto.font.support.css">
</head>

<body>
    <div id="navbar">
        <ul class="nav-item">
            <li class="nav-alt-item"> Kek S</li>
        </ul>
    </div>
    <div class="split-slideshow">
        <div class="slideshow">
            <div class="slider">
                @{
                    int sayi;
                    sayi = Directory.GetFiles(Server.MapPath("~/Media/Fotograflar/Anasayfa")).Length;
                    if (sayi != 0)
                    {
                        foreach (var yol in Directory.GetFiles(Server.MapPath("~/Media/Fotograflar/Anasayfa")))
                        {
                            <div class="item">
                                <img src="~/Media/Fotograflar/Anasayfa/@Path.GetFileName(yol)" />
                            </div>

                        }
                    }
                };

            </div>
        </div>
        <div class="slideshow-text">
            <div class="item"></div>
            <div class="item"></div>
            <div class="item"></div>
            <div class="item"></div>
        </div>
    </div>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery.mouse.whell.js"></script>
    <script src="~/Scripts/slick.min.js"></script>
    <script src="~/Scripts/anasayfa.js"></script>

</body>